<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>The Movie DB</title>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <div class="wrapper">
        <!-- leftbar Holder -->
        <nav id="leftbar">
            <div class="leftbar-header">
                <img class="img-responsive" src="~/images/logo.png" alt="Card image cap">
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">
                        <i class="glyphicon glyphicon-film"></i>
                        Filmes
                    </a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li><a href="@Url.Content("~/Movies/Upcoming")">Lançamentos</a></li>
                        <li><a href="@Url.Content("~/Movies/TopRated")">Mais Bem Avaliados</a></li>
                    </ul>
                </li>                
            </ul>
        </nav>
        <!-- Page Content Holder -->
        <div id="content">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" >
                        <form asp-controller="Movies" asp-action="Search"> 
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Digite o nome de um filme" name="query">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>


    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>


